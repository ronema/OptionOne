{
  "manifest_version": 3,
  "name": "OptionOne",
  "version": "1.0",
  "description": "Quick access to recent tabs",
  "permissions": [
    "tabs",
    "history",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*", 
        "https://*/*", 
        "file:///*"
      ],
      "js": ["modal.js"],
      "css": ["modal.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["newtab.svg"],
    "matches": ["<all_urls>"],
    "use_dynamic_url": true
  }],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+1",
        "mac": "Alt+1"
      },
      "description": "Open OneTab popup"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
